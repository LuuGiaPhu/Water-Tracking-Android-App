<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvSelectedIntake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="Selected: 0 ml"
        android:textSize="16sp" />

    <SeekBar
        android:id="@+id/seekBarWaterIntake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="2000" />

    <Button
        android:id="@+id/btnSetWaterIntake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#347FE2"
        android:text="Set" />
</LinearLayout>