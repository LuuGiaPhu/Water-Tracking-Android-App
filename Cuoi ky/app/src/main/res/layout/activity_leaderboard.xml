<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sky_blue">

    <ImageButton
        android:id="@+id/btnReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:contentDescription="Return"
        android:paddingTop="30dp"
        android:src="@drawable/ic_arrow_back" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:paddingTop="30dp"
        android:text="@string/ranking"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/podiumLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/secondPlaceLayout"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <com.example.myapplication.CircularImageView
                android:id="@+id/secondPlaceAvatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/sample"
                android:layout_marginBottom="4dp"
                android:background="@drawable/circle_bg" />

            <TextView
                android:id="@+id/secondPlaceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jennie"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/secondPlaceScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’§2.5k"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/secondPlaceRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:background="@drawable/bg_rank_2"
                android:padding="4dp"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/firstPlaceLayout"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <com.example.myapplication.CircularImageView
                android:id="@+id/firstPlaceAvatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/sample"
                android:layout_marginBottom="4dp"
                android:background="@drawable/circle_bg" />

            <TextView
                android:id="@+id/firstPlaceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mino"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/firstPlaceScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’§3.8k"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/firstPlaceRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:background="@drawable/bg_rank_1"
                android:padding="4dp"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdPlaceLayout"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <com.example.myapplication.CircularImageView
                android:id="@+id/thirdPlaceAvatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/sample"
                android:layout_marginBottom="4dp"
                android:background="@drawable/circle_bg" />

            <TextView
                android:id="@+id/thirdPlaceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vinxen"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/thirdPlaceScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’§2.3k"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/thirdPlaceRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:background="@drawable/bg_rank_3"
                android:padding="4dp"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/podiumLayout"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="80dp"
        android:layout_marginHorizontal="16dp"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        app:cardCornerRadius="16dp">

        <ListView
            android:id="@+id/leaderboardList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FDFDFD"
            android:divider="@color/white"
            android:dividerHeight="1dp"
            android:textColor="@android:color/black" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/View_achievements"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="16dp"
        android:text="@string/view_achievements"
        app:backgroundTint="@color/dark_blue"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_button_blue" />
</RelativeLayout>