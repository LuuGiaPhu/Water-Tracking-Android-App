<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <!-- Custom Circular Progress View -->
            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="8dp">

                <!-- CircularProgressView (custom view) -->
                <com.example.myapplication.CircularProgressView
                    android:id="@+id/customProgress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- Text in center of progress -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvWaterIntake"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1250"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDailyGoal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/2000 mL"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp" />

                    <!-- New TextView for displaying steps -->
                    <TextView
                        android:id="@+id/tvStepCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Steps: 0"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>
            <!-- Drink Button -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_rounded_button"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="6dp">

                <Button
                    android:id="@+id/btnAddWater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Drink"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_glass_water" />
            </LinearLayout>

            <!-- New TextView for Gemini suggestion -->
            <TextView
                android:id="@+id/tvGeminiSuggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Gemini Suggestion: "
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="italic" />


            <!-- Sign in / out -->
            <TextView
                android:id="@+id/tvSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Sign In"
                android:textColor="#000000"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnSignOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@android:color/holo_red_light"
                android:text="Sign Out"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>
</androidx.wear.widget.BoxInsetLayout>